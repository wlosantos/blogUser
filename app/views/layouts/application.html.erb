<!DOCTYPE html>
<html>
  <head>
    <title>BlogUser</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>

    <%= render 'articles/navigation' %>

    <div class="container">

      <% flash.each do |name, msg| %>
        <ul>
          <li><%= msg %></li>
        </ul>
      <% end %>

      <%= yield %>

    </div>

  </body>
</html>
